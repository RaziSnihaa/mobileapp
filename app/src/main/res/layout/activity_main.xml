<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp">

    <TextView
        android:id="@+id/tv_status"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Status: idle"
        android:textSize="18sp"
        android:padding="8dp" />

    <Button
        android:id="@+id/btn_toggle_eye"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Activer Eye-tracking" />

    <Button
        android:id="@+id/btn_toggle_remote"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Activer Contrôle à distance" />

    <TextView
        android:id="@+id/tv_gaze"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Gaze: -"
        android:textSize="16sp"
        android:paddingTop="12dp" />

    <SeekBar
        android:id="@+id/sensitivity_seek"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:max="100"
        android:progress="50" />

    <TextView
        android:id="@+id/tv_sensitivity"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Sensibilité: 50" />

</LinearLayout>
